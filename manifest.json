{
  "manifest_version": 3,
  "name": "Trading Dashboard",
  "version": "1.4.0",
  "description": "Advanced trading analytics dashboard with Google Sheets integration",
  "permissions": [
    "storage",
    "identity"
  ],
  
  "host_permissions": [
    "https://sheets.googleapis.com/*"
  ],
  
  "oauth2": {
    "client_id": "458483161888-ogkk5jsiffi7rdl3frd9gmfvnv3acmg8.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets.readonly"
    ]
  },
  
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  
  "background": {
    "service_worker": "background.js",
    "scripts": [
      "background.legacy.js"
    ]
  },
  
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "trading-dashboard@yourname.com",
      "strict_min_version": "121.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  }}
